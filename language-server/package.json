{
  "name": "language-server",
  "version": "1.0.0",
  "description": "Language server for markdown",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "start": "node dist/direct.js",
    "lint": "biome lint src/",
    "format": "biome format src/ --write"
  },
  "keywords": ["language-server", "markdown", "monaco-editor"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.3",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11",
    "vscode-ws-jsonrpc": "^3.4.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "@types/ws": "^8.5.10",
    "typescript": "^5.3.3"
  }
}
